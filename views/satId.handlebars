<section id="satIdPage">
        {{#if loggedIn}}

        <form action="#" class="form" id="satIdInfo">
                <h2>Satellite Information</h2>
                <div>
                        <p>Name: {{satInfo.satellite_name}}</p>
                </div>
                <div>
                        <p>Norad ID: {{satInfo.norad_id}}</p>
                </div>
                <div>
                        <p>Country of Origin: {{satInfo.country.country_name}}</p>
                </div>
        </form>

        <section class="form" id="satSearchResults">
                <h2>Current Location</h2>

                {{!-- file updated --}}

                <div>
                        <p>Latitude: {{satInfo.latitude}}</p>
                </div>
                <div>
                        <p>Longitude: {{satInfo.longitude}}</p>
                </div>
                <div>
                        <p>"Map showing current location would go here"</p>
                </div>
        </section>

        <section>
                <form class="form" id="update_form">
                        <h2>Update Satellite Information</h2>
                        <label for="update_name">Satellite Name:</label>
                        <input type="text" name="update_name" id="update_name">
                        <label for="update_country">Country Name:</label>
                        <input type="text" name="update_country" id="update_country">
                        <button class="updateSatBtn {{satellite.id}}">Update Satellite</button>
                </form>
        </section>

        {{else}}

        <div class="login-link">
                <a href="/login">Please login to track the satellites in your area</a>
        </div>

        {{/if}}
</section>

